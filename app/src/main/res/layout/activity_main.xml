<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/form_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/enter_city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter city:"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/city_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/enter_city_text"
                android:layout_alignLeft="@id/enter_city_text"
                android:layout_alignRight="@id/enter_city_text"
                android:text="Irkutsk"/>

            <Button
                android:id="@+id/get_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_edittext"
                android:layout_alignLeft="@id/city_edittext"
                android:layout_alignRight="@id/city_edittext"
                android:text="Get Weather"/>


        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>